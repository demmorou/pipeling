{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "moduleResolution": "node",
    "noEmit": true,
    "sourceMap": true,

    "outDir": "./dist",
    "rootDir": "./src",

    "baseUrl": "./src",
    "paths": {
      "~config/*": ["config/*"],
      "~modules/*": ["modules/*"]
    }
  },
  "include": ["src"]
}
